<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Место проведения"
            android:id="@+id/textView5"

            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:layout_gravity="fill"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_height="wrap_content"

                android:src="@drawable/map_adress"

                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceMedium"

                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="dffsdsdf"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <TextView
            android:id="@+id/textViewBus"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill"

            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="sdfdfdds"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textViewTrolley"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill"

            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:text="fdgdg" />

        <TextView
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Контактная информация"
            android:id="@+id/textView11"

            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_gravity="fill"

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_height="wrap_content"

                android:src="@drawable/phone"
                android:layout_gravity="fill"

                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/textViewContact"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="fill_horizontal|center_vertical"

                android:layout_width="wrap_content"

                android:textSize="16sp"
                android:layout_marginLeft="26dp"
                android:text="dfdfgdfgfd"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:id="@+id/textViewMobilePhone"
            android:layout_height="wrap_content"

            android:autoLink="phone"
            android:linksClickable="true"
            android:textColorLink="@color/primaryColor"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="fill"

            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:text="dfgdfg" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_height="wrap_content"

            android:layout_gravity="fill"

            android:autoLink="email"
            android:linksClickable="true"
            android:textColorLink="@color/primaryColor"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:text="textViewEmail"
            android:layout_marginLeft="50dp"
            android:layout_weight="1" />


    </LinearLayout>


</LinearLayout>